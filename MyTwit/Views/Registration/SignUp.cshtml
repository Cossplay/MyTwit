@model MyTwit.Models.User
@{
    ViewBag.Title = "SignUp";
}

<h2>SignUp</h2>
<form method="post" action="@Url.Action("SignUp", "Registration")">
    <div class="form-group">
        <label>@Html.DisplayName("Login")</label>
        @Html.EditorFor(model => model.Login, new {htmlAttributes = new {@class = "form-control", @placeholder = "Введите логин"}})
        @Html.ValidationMessageFor(model => model.Login)
    </div>
    <div class="form-group">
        <label>@Html.DisplayName("Password")</label>
        @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control", @placeholder = "Введите пароль"}})
        @Html.ValidationMessageFor(model => model.Password)
    </div>
    <div class="form-group">
        <label>@Html.DisplayName("ConfirmPassword")</label>
        @Html.EditorFor(model => model.ConfirmPassword, new {htmlAttributes = new {@class = "form-control", @placeholder = "Введите пароль"}})
        @Html.ValidationMessageFor(model => model.ConfirmPassword)
    </div>
    <input type="submit" class="btn btn-primary"/>
</form>
