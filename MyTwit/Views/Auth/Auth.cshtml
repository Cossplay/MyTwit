@using System.Web.Script.Services

@{
    ViewBag.Title = "html for login";
}

<h2>Auth</h2>
<form role="form" method="post" action="@Url.Action("SignIn", "Auth")">
    <div class="form-group">
        <label for="inputUser">Логин</label>
        <input type="text" pattern="[a-zA-Z0-9]+" class="form-control" id="inputUser" name="inputUser" placeholder="Введите логин">
    </div>
    <div class="form-group">
        <label for="inputPass">Пароль</label>
        <input type="password" class="form-control" id="inputPass" name="inputPass" placeholder="Пароль">
    </div>
    <input type="button" class="btn btn-primary" value="Зарегаться" onclick="location.href = '@Url.Action("SignUp","Registration")'"/>
    <input type="submit" class="btn btn-success">
</form>
