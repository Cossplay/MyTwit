@using System.Web.Script.Services
@model MyTwit.Models.User

@{
    ViewBag.Title = "html for login";
}

<h2>Auth</h2>
<form role="form" method="post" action="@Url.Action("SignIn", "Auth")">
    <div class="form-group">
        <label>@Html.DisplayName("Login")</label>
        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите логин" } })
        @Html.ValidationMessageFor(model => model.Login)
    </div>
    <div class="form-group">
        <label>@Html.DisplayName("Password")</label>
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите пароль" } })
        @Html.ValidationMessageFor(model => model.Password)
    </div>
    <input type="button" class="btn btn-primary" value="Зарегаться" onclick="location.href = '@Url.Action("SignUp","Registration")'"/>
    <input type="submit" class="btn btn-success">
</form>
